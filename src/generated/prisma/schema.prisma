generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
  role     Role
}

model Jadwal {
  id           Int       @id @default(autoincrement())
  hari         Hari
  lab          Lab
  kelas        Kelas     @default(Kosong)
  waktuMulai   DateTime  @db.Time()
  waktuSelesai DateTime  @db.Time()
  laporan      Laporan[]
}

model Laporan {
  id                  Int    @id @default(autoincrement())
  id_jadwal           Int
  foto_ruangan        String
  foto_kerusakan      String
  deskripsi_kerusakan String
  kerusakan_1         String
  kerusakan_2         String
  kerusakan_3         String
  kerusakan_4         String
  kerusakan_5         String
  jadwal              Jadwal @relation(fields: [id_jadwal], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Hari {
  Senin
  Selasa
  Rabu
  Kamis
  Jumat
}

enum Lab {
  RPL_1
  RPL_2
  RPL_3
}

enum Kelas {
  Kosong
  X_PPLG_1
  X_PPLG_2
  X_PPLG_3
  XI_PPLG_1
  XI_PPLG_2
  XI_PPLG_3
  XII_PPLG_1
  XII_PPLG_2
  XII_PPLG_3
}
